{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Meme Generator</h1>

    <div class="row">
        <div class="col-lg-8">
            <div id="memes-container" class="memes-container">
                {% for meme in memes %}
                    <div class="meme">
                        <a href="/memes/{{ meme.id }}">
                            <img src="/images/{{ meme.getImage.id }}" width="225">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="col-lg-4">
            <iframe src="/form" width="300" height="475" frameborder="0" scrolling="no" seamless></iframe>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
    // isotope
    $(window).load(function() {
        var $container = $("#memes-container");

        $container.isotope({
            resizable: false,
            masonry : {
                columnWidth: $container.width() / 3
            }
        });
    });
    </script>
{% endblock %}